{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,
        "module": "es6",
        "jsx": "react",
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "projectRoot/*": ["./*"],
            "src/*": ["./src/*"],
        },
    },

    "include": [
        "./src/",
    ]
}