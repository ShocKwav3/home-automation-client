{
    "presets": [
        ["@babel/preset-env", {"modules": false}],
        "@babel/preset-react"
    ],

    "plugins": [
        "lodash",
        "recharts",
        [
            "module-resolver",
            {
                "root": ["./"],
                "alias": {
                    "projectRoot": "./",
                    "src": "./src/"
                }
            }
        ],
        [
            //supports only upto level 2 (@material-ui/core/Tabs/TabIndicator <- level 3 not supported)
            "transform-imports",
            {
                "@material-ui/core": {
                    "transform": "@material-ui/core/${member}"
                },
                "@material-ui/icons": {
                    "transform": "@material-ui/icons/${member}"
                }
            }
        ]
    ]
}